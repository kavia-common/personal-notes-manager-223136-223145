# Backend configuration for Notes API

# PostgreSQL connection URL (SQLAlchemy format)
# Example: postgresql+psycopg2://user:password@localhost:5432/notes_database
DATABASE_URL=postgresql+psycopg2://USER:PASSWORD@HOST:5432/notes_database

# Alternatively, support POSTGRES_URL if provided by environment
# POSTGRES_URL=postgresql+psycopg2://USER:PASSWORD@HOST:5432/notes_database

# JWT configuration
JWT_SECRET_KEY=change-this-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=60

# CORS front-end origin
FRONTEND_ORIGIN=http://localhost:3000
